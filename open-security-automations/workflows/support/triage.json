    {
      "parameters": {
        "jsCode": "// Clean and prepare email content for analysis\nconst emailData = $input.first().json;\n\n// Extract email content\nconst subject = emailData.subject || '';\nconst textBody = emailData.text || '';\nconst htmlBody = emailData.html || '';\nconst sender = emailData.from?.text || '';\n\n// Clean the text content\nlet cleanText = textBody;\n\n// Remove email signatures\ncleanText = cleanText.replace(/--\\s*\\n[\\s\\S]*$/gm, '');\ncleanText = cleanText.replace(/_{3,}/g, '');\n\n// Remove quoted text (previous emails)\ncleanText = cleanText.replace(/^>.*$/gm, '');\ncleanText = cleanText.replace(/On .*wrote:$/gm, '');\n\n// Remove excessive whitespace\ncleanText = cleanText.replace(/\\n{3,}/g, '\\n\\n');\ncleanText = cleanText.trim();\n\n// Prepare data for AI analysis\nconst analysisData = {\n  email_id: emailData.messageId,\n  sender: sender,\n  subject: subject,\n  content: cleanText,\n  original_length: textBody.length,\n  cleaned_length: cleanText.length,\n  timestamp: new Date().toISOString()\n};\n\nreturn [{ json: analysisData }];"
      },
      "id": "a2b3c4d5-e6f7-8901-2345-6789abcdef01",
      "name": "Clean Email Content",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [460, 300]
    },
