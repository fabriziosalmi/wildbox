        "genericAuthType": "httpHeaderAuth",
        "sendBody": true,
        "bodyContentType": "json",
        "jsonBody": "={\n  \"task_type\": \"classify_support_email\",\n  \"input_data\": {\n    \"email_text\": \"{{ $json.subject }} - {{ $json.content }}\",\n    \"sender\": \"{{ $json.sender }}\",\n    \"subject\": \"{{ $json.subject }}\"\n  },\n  \"context\": {\n    \"priority\": \"normal\",\n    \"department\": \"support\"\n  }\n}",
        "options": {
          "timeout": 30000
        }
      },
