# Wildbox Security Platform - Environment Configuration
# =====================================================
# SECURITY WARNING: Never commit actual secrets to version control!
# Copy this file to .env and update with your actual values

# Identity Service Configuration
DATABASE_URL=postgresql+asyncpg://postgres:YOUR_DB_PASSWORD@postgres:5432/identity
REDIS_URL=redis://wildbox-redis:6379/0

# Security Keys (CHANGE THESE!)
JWT_SECRET_KEY=generate-a-secure-random-jwt-secret-key-here
ENCRYPTION_KEY=generate-a-secure-encryption-key-here

# Admin Configuration
CREATE_INITIAL_ADMIN=true
INITIAL_ADMIN_EMAIL=admin@yourdomain.com
INITIAL_ADMIN_PASSWORD=Change-This-To-A-Secure-Password!

# API Keys (IMPORTANT: Generate a secure random key for this)
# Example: openssl rand -hex 32
API_KEY=replace-this-with-a-secure-random-string-32-chars-long

# Stripe Configuration (Development/Test keys)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key

# Application Configuration
DEBUG=false
LOG_LEVEL=INFO
ENVIRONMENT=production
CORS_ORIGINS=https://yourdomain.com,https://dashboard.yourdomain.com

# Database Passwords
POSTGRES_PASSWORD=generate-secure-database-password
POSTGRES_USER=wildbox_user
POSTGRES_DB=wildbox_main

# Guardian Service
GUARDIAN_SECRET_KEY=generate-guardian-secret-key
GUARDIAN_DB_PASSWORD=generate-guardian-db-password

# Gateway Configuration (CRITICAL for production!)
# Used for secure internal service-to-service communication
# Generate with: openssl rand -hex 32
# This must match the value in open-security-gateway/.env
GATEWAY_INTERNAL_SECRET=CHANGE-THIS-TO-A-SECURE-RANDOM-SECRET

# Security Settings
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=1800
REQUIRE_EMAIL_VERIFICATION=true
REQUIRE_MFA=false

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090