# Wildbox SecurCSPM_SERVICE_URL=http://open-security-cspm:8019ty Gateway Environment Configuration
# Copy this file to .env and customize for your environment

# Environment mode (development, staging, production)
WILDBOX_ENV=development

# Gateway logging level (debug, info, warn, error)
GATEWAY_LOG_LEVEL=info

# Enable debug features (true/false)
GATEWAY_DEBUG=false

# Backend service URLs (usually auto-discovered via Docker)
IDENTITY_SERVICE_URL=http://open-security-identity:8000
DATA_SERVICE_URL=http://open-security-data:8001
CSPM_SERVICE_URL=http://open-security-cspm:8002
GUARDIAN_SERVICE_URL=http://open-security-guardian:8003
RESPONDER_SERVICE_URL=http://open-security-responder:8004
AGENTS_SERVICE_URL=http://open-security-agents:8006
SENSOR_SERVICE_URL=http://open-security-sensor:8006
DASHBOARD_SERVICE_URL=http://open-security-dashboard:3000
AUTOMATIONS_SERVICE_URL=http://open-security-automations:5678

# Redis configuration
REDIS_URL=redis://redis:6379/0

# Authentication cache TTL (seconds) - Blueprint: 1-5 minutes = 300 seconds
AUTH_CACHE_TTL=300

# Gateway internal secret for service-to-service communication
# CRITICAL: Change this in production!
GATEWAY_INTERNAL_SECRET=changeme-in-production-use-strong-secret

# Rate limiting window (seconds)
RATE_LIMIT_WINDOW=3600

# SSL configuration
SSL_CERT_PATH=/etc/ssl/wildbox/wildbox.crt
SSL_KEY_PATH=/etc/ssl/wildbox/wildbox.key

# CORS configuration
CORS_ORIGINS=https://wildbox.local,https://dashboard.wildbox.local
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Authorization,Content-Type,X-API-Key

# Security headers
SECURITY_HEADERS_ENABLED=true
HSTS_MAX_AGE=31536000

# Performance settings
WORKER_PROCESSES=auto
WORKER_CONNECTIONS=4096
CLIENT_MAX_BODY_SIZE=50m

# Monitoring and metrics
METRICS_ENABLED=true
ACCESS_LOG_ENABLED=true
ERROR_LOG_LEVEL=warn
